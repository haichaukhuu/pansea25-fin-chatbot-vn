# JWT Authentication Settings
# A secure, random key for signing JWTs.
JWT_SECRET_KEY=
# The algorithm used to sign the JWT. (e.g., HS256)
JWT_ALGORITHM=
# The expiration time for access tokens in minutes.
ACCESS_TOKEN_EXPIRE_MINUTES=
# The expiration time for refresh tokens in days.
REFRESH_TOKEN_EXPIRE_DAYS=

# Google GenAI API Key (for AI models)
# Your API key for accessing Google's generative AI services.
GOOGLE_GENAI_API_KEY=

# Server Configuration
# Set to 'true' for development and 'false' for production.
DEBUG=
# The application's log level (e.g., INFO, DEBUG, WARNING, ERROR).
LOG_LEVEL=
# The name of the application.
APP_NAME=

# AWS Configuration
# The AWS region where your services are hosted.
AWS_REGION=

# AWS Configuration for Amazon Transcribe
# Your AWS access key ID for Transcribe.
AWS_TRANSCRIBE_ACCESS_KEY_ID=
# Your AWS secret access key for Transcribe.
AWS_TRANSCRIBE_SECRET_ACCESS_KEY=

# AWS Configuration for Database Services
# AWS Configuration for Preferences
# Your AWS access key ID for Preferences storage.
AWS_PREFERENCE_ACCESS_KEY_ID=
# Your AWS secret access key for Preferences storage.
AWS_PREFERENCE_SECRET_ACCESS_KEY=
# The name of your preference table.
PREFERENCE_TABLE_NAME=
# The region for your preference table.
PREFERENCE_REGION=

# AWS Configuration for Chat History (DynamoDB)
# Your AWS access key ID for Chat History storage.
AWS_CHAT_HISTORY_ACCESS_KEY_ID=
# Your AWS secret access key for Chat History storage.
AWS_CHAT_HISTORY_SECRET_ACCESS_KEY=
# The name of your chat history table.
CHAT_HISTORY_TABLE_NAME=
# The ARN of your chat history table (optional).
CHAT_HISTORY_ARN=

# Database Configuration (PostgreSQL)
# The host/endpoint of your database.
DB_HOST=
# The port number of your database.
DB_PORT=
# The name of the database.
DB_NAME=
# The database user.
DB_USER=
# The database user's password.
DB_PASSWORD=
# The full database connection URL.
RDS_DATABASE_URL=

# Tavily API Key
# API key for the Tavily search engine.
TAVILY_API_KEY=

# Docker Configuration
# Set to 'true' when running in Docker container
DOCKER_ENVIRONMENT=false
# Container internal port (usually 8000)
CONTAINER_PORT=8000
# Host port mapping for external access
HOST_PORT=8000

# Database Configuration for Docker
# When using docker-compose with PostgreSQL service
# Use 'postgres' as hostname when containers are in same network
# For external database, use actual hostname/IP
DOCKER_DB_HOST=postgres
DOCKER_DB_PORT=5432
DOCKER_DB_NAME=agrifinhub
DOCKER_DB_USER=postgres
DOCKER_DB_PASSWORD=postgres