# Firebase Configuration
# Copy this file to .env and fill in your actual values

# Required for Firebase Admin SDK
FIREBASE_PROJECT_ID=agrifinhub

# Optional: Path to service account key file (if not using the one in auth/ directory)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account-key.json

# Required for Firebase Client SDK (for authentication)
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=agrifinhub.firebaseapp.com
FIREBASE_STORAGE_BUCKET=agrifinhub.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
FIREBASE_APP_ID=your_firebase_app_id

# Google GenAI API Key (for AI models)
GOOGLE_GENAI_API_KEY=your_google_genai_api_key_here

# RAG System Configuration
RAG_LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=sqlite:///./financial_knowledge_db/chroma.sqlite3

# AWS Configuration for Amazon Transcribe
AWS_TRANSCRIBE_ACCESS_KEY_ID=your_aws_access_key_here
AWS_TRANSCRIBE_SECRET_ACCESS_KEY=your_aws_secret_key_here

# AWS Configuration for Database Services
AWS_DATABASE_ACCESS_KEY_ID=your_aws_access_key_here
AWS_DATABASE_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=ap-southeast-1

# Server Configuration
DEBUG=false
LOG_LEVEL=INFO
